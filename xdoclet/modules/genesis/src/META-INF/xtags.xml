<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xdoclet PUBLIC "-//XDoclet Team//DTD XDoclet Tags 1.1//EN" "http://xdoclet.sourceforge.net/dtds/xtags_1_1.dtd">
<xdoclet>
  <!-- genesis specific tags -->
  <namespace>
    <name>genesis</name>
    <usage-description>
      Defines validation rules.
    </usage-description>
    <condition-description>Applicable to POJOs</condition-description>
    <condition type="method"/>
    <tags>
        <tag>
            <level>class</level>
            <name>genesis.form</name>
            <usage-description>Defines a bean and its attributes.</usage-description>
            <unique>false</unique>
            <condition-description>POJOs</condition-description>
            <condition type="type">
                <condition-parameter>java.lang.Object</condition-parameter>
            </condition>
       </tag>
	    <tag>
		    <level>method</level>
		    <name>genesis.validator</name>
		    <usage-description>Defines genesis Validator for current setter field or getter on nested properties</usage-description>
		    <unique>false</unique>
		    <condition-description>genesis Validator</condition-description>
		    <condition type="and">
			    <condition type="class"/>
			    <condition type="type">
				    <condition-parameter>java.lang.Object</condition-parameter>
			    </condition>
		    </condition>
		    <parameter type="text">
			    <name>type</name>
			    <usage-description>Validator type, such as "required"</usage-description>
			    <mandatory>true</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>msgkey</name>
			    <usage-description>Override key for the validator error message</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>msgvalue</name>
			    <usage-description>Explicitly define a validator error message</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">		    
			    <name>page</name>
			    <usage-description>Only fields with a "page" attribute
                     value that is equal to or less than the page property
                     on the form JavaBean are processed.</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg0value</name>
			    <usage-description>Value of argument index 0</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg0resource</name>
			    <usage-description>Resource key of argument index 0</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg1value</name>
			    <usage-description>Value of argument index 1</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg1resource</name>
			    <usage-description>Resource key of argument index 1</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg2value</name>
			    <usage-description>Value of argument index 2</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg2resource</name>
			    <usage-description>Resource key of argument index 2</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg3value</name>
			    <usage-description>Value of argument index 3</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg3resource</name>
			    <usage-description>Resource key of argument index 3</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
	    </tag>
	    <tag>
		    <level>method</level>
		    <name>genesis.validator-args</name>
		    <usage-description>Defines arguments for current setter field.</usage-description>
		    <unique>true</unique>
		    <condition-description>genesis Validator</condition-description>
		    <condition type="and">
			    <condition type="class"/>
			    <condition type="type">
				    <condition-parameter>java.lang.Object</condition-parameter>
			    </condition>
		    </condition>
		    <parameter type="text">
			    <name>arg0value</name>
			    <usage-description>Value of argument index 0</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg0resource</name>
			    <usage-description>Resource key of argument index 0</usage-description>
			    <mandatory>false</mandatory>
			    <default>FormName.fieldName</default>
		    </parameter>
		    <parameter type="text">
			    <name>arg1value</name>
			    <usage-description>Value of argument index 1</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg1resource</name>
			    <usage-description>Resource key of argument index 1</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg2value</name>
			    <usage-description>Value of argument index 2</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg2resource</name>
			    <usage-description>Resource key of argument index 2</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg3value</name>
			    <usage-description>Value of argument index 3</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>arg3resource</name>
			    <usage-description>Resource key of argument index 3</usage-description>
			    <mandatory>false</mandatory>
		    </parameter>
	    </tag>
	    <tag>
		    <level>method</level>
		    <name>genesis.validator-var</name>
		    <usage-description>Defines genesis Validator variable</usage-description>
		    <unique>false</unique>
		    <condition-description>genesis Validator</condition-description>
		    <condition type="and">
			    <condition type="class"/>
			    <condition type="type">
				    <condition-parameter>java.lang.Object</condition-parameter>
			    </condition>
		    </condition>
		    <parameter type="text">
			    <name>name</name>
			    <usage-description>Variable name</usage-description>
			    <mandatory>true</mandatory>
		    </parameter>
		    <parameter type="text">
			    <name>value</name>
			    <usage-description>Variable value</usage-description>
			    <mandatory>true</mandatory>
		    </parameter>
	    </tag>
    </tags>
  </namespace>
</xdoclet>
