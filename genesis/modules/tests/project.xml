<project>
    <extend>../../project.xml</extend>
    <pomVersion>3</pomVersion>
    <artifactId>genesis-unit-tests</artifactId>
    <name>Genesis Unit Tests</name>
    <package>tests</package>
    <dependencies>
	    <dependency>
            <groupId>genesis</groupId>
            <artifactId>genesis-shared</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>https://genesis.dev.java.net/</url>
        </dependency>
        <dependency>
            <groupId>genesis</groupId>
            <artifactId>genesis-client</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>https://genesis.dev.java.net/</url>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <type>jar</type>
            <url>http://www.junit.org/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>j2ee</groupId>
            <artifactId>j2ee</artifactId>
            <jar>j2ee.jar</jar>
            <type>jar</type>
            <properties/>
        </dependency>
        <dependency>
            <groupId>hibernate</groupId>
            <artifactId>hibernate</artifactId>
            <version>2.1.5</version>
            <type>jar</type>
            <url>http://www.hibernate.org/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.7</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>thinlet</groupId>
            <artifactId>thinlet</artifactId>
            <jar>thinlet-20040817.jar</jar>
            <type>jar</type>
            <url>http://thinlet.sourceforge.net/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-jxpath</groupId>
            <artifactId>commons-jxpath</artifactId>
            <version>1.2</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-validator</groupId>
            <artifactId>commons-validator</artifactId>
            <version>1.1.3</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-digester</groupId>
            <artifactId>commons-digester</artifactId>
            <version>1.5</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>jakarta</groupId>
            <artifactId>jakarta-oro</artifactId>
            <version>2.0.8</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/oro/</url>
            <properties/>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory/>
        <unitTestSourceDirectory>src</unitTestSourceDirectory>
        <unitTest>
           <includes>
              <include>**/*Test.class</include>
           </includes>
           <resources>
               <resource>
                   <directory>${pom.build.unitTestSourceDirectory}</directory>
                   <includes>
                       <include>**/*.properties</include>
                       <include>**/*.xml</include>
                   </includes>
                   <filtering>false</filtering>
               </resource>
               <resource>
                   <directory>${maven.build.src}</directory>
                   <includes>
                       <include>**/*.xml</include>
                   </includes>
                   <excludes>
                       <exclude>jboss-service.xml</exclude>
                   </excludes>
                   <filtering>false</filtering>
               </resource>
           </resources>
        </unitTest>
    </build>
    <reports/>
    <properties/>
</project>