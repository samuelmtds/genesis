<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE panel PUBLIC '-//Thinlets 1.0//EN' 'https://thinlet.dev.java.net/thinlet.dtd'>
<panel gap="20" top="10" left="10" bottom="10" right="10"
       weightx="1" columns="1" halign="center">
    <textarea name="message" weightx="1" weighty="1" editable="false" 
              border="false" font="bold" focusgained="loseFocus()"/>
    <panel gap="10" weightx="1" halign="center">
        <panel />
        <button name="yes" text="i18n.Option.YES" action="yes()" weightx="0" font="bold"
                type="default" mnemonic="0" />
        <button name="no" text="i18n.Option.NO" action="no()" weightx="0" font="bold" 
                mnemonic="0" />
        <button name="cancel" text="i18n.Option.CANCEL" action="close()" weightx="0" 
                font="bold" type="cancel" mnemonic="0" />
        <panel />
    </panel>
</panel>