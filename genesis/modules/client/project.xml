<project>
    <extend>../../project.xml</extend>
    <artifactId>genesis-client</artifactId>
    <name>genesis client module</name>
    <repository>
      <connection>
         scm:cvs:pserver:${maven.guest.username}@cvs.dev.java.net:/cvs:genesis</connection>
      <developerConnection>
         scm:cvs:pserver:${maven.username}@cvs.dev.java.net:/cvs:genesis</developerConnection>
      <url>https://genesis.dev.java.net/source/browse/genesis/genesis/modules/client/</url>
    </repository>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>genesis-annotation</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>https://genesis.dev.java.net/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>genesis-shared</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>https://genesis.dev.java.net/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.7</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-jxpath</groupId>
            <artifactId>commons-jxpath</artifactId>
            <version>1.2</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/</url>
            <properties>
              <comment>If JXPath is used as script language</comment>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-validator</groupId>
            <artifactId>commons-validator</artifactId>
            <version>1.3.1</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-digester</groupId>
            <artifactId>commons-digester</artifactId>
            <version>1.7</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/</url>
            <properties>
              <comment>If commons-validator is used</comment>
            </properties>
        </dependency>
        <dependency>
            <groupId>jakarta</groupId>
            <artifactId>jakarta-oro</artifactId>
            <version>2.0.8</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/oro/</url>
            <properties>
              <comment>If commons-validator is used</comment>
            </properties>
        </dependency>
        <dependency>
            <groupId>reusable-components</groupId>
            <artifactId>reusable-components</artifactId>
            <jar>reusable-components-20060810.jar</jar>
            <type>jar</type>
            <url>https://reusable-components.dev.java.net/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>thinlet</groupId>
            <artifactId>thinlet</artifactId>
            <jar>thinlet-20040817.jar</jar>
            <type>jar</type>
            <url>http://thinlet.sourceforge.net/</url>
            <properties>
              <comment>If Thinlet is used</comment>
            </properties>
        </dependency>
        <dependency>
            <groupId>jakarta</groupId>
            <artifactId>bsf</artifactId>
            <version>2.4.0</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/bsf/</url>
            <properties>
              <comment>If BSF is used (needed when using javascript in JDKs without javax.script API)</comment>
            </properties>
        </dependency>
        <dependency>
            <groupId>bsh</groupId>
            <artifactId>bsh</artifactId>
            <version>2.0b4</version>
            <type>jar</type>
            <url>http://www.beanshell.org/</url>
            <properties>
              <comment>If BeanShell is used as script language</comment>
            </properties>
        </dependency>
        <dependency>
            <groupId>jakarta</groupId>
            <artifactId>commons-el</artifactId>
            <version>1.0</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/el/</url>
            <properties>
              <comment>If EL is used as script language</comment>
            </properties>
        </dependency>
        <dependency>
            <groupId>jakarta</groupId>
            <artifactId>jakarta-taglibs-standard</artifactId>
            <version>1.1.2</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/taglibs/</url>
            <properties>
              <comment>If EL is used as script language</comment>
            </properties>
        </dependency>
        <dependency>
            <groupId>j2ee</groupId>
            <artifactId>jsp-api</artifactId>
            <jar>jsp-api.jar</jar>
            <properties>
              <comment>If EL is used as script language</comment>
            </properties>
        </dependency>
        <dependency>
            <groupId>swt</groupId>
            <artifactId>swt</artifactId>
            <version>3.2</version>
            <type>jar</type>
            <url>http://www.eclipse.org/swt/</url>
            <properties>
              <comment>If SWT is used</comment>
            </properties>
        </dependency>
        <dependency>
            <groupId>backport175</groupId>
            <artifactId>backport175</artifactId>
            <version>1.1.RC1-snapshot</version>
            <type>jar</type>
            <url>http://backport175.codehaus.org/</url>
            <properties/>
        </dependency>

        <!-- Unit test dependency -->
        <dependency>
            <groupId>hibernate</groupId>
            <artifactId>hibernate</artifactId>
            <version>2.1.8</version>
            <type>jar</type>
            <url>http://www.hibernate.org/</url>
            <properties>
              <comment>Unit test dependency</comment>
            </properties>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <unitTestSourceDirectory>test-src</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources/>
        </unitTest>
        <resources>
            <resource>
                <directory>${pom.build.sourceDirectory}</directory>
                    <includes>
                    <include>**/*.xml</include>
                    <include>**/*.properties</include>
                    <include>**/*.sample</include>
                </includes>
            </resource>
        </resources>
    </build>
    <reports>
        <!--report>maven-pmd-plugin</report-->
        <report>maven-simian-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-jcoverage-plugin</report>
        <!--report>maven-checkstyle-plugin</report>
        <report>maven-jdepend-plugin</report-->
        <report>maven-statcvs-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-javadoc-plugin</report>
    </reports>
    <properties/>
</project>