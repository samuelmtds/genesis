<project>
    <extend>../../project.xml</extend>
    <artifactId>genesis-server</artifactId>
    <name>Genesis Server Technology</name>
    <repository>
		<connection>
         scm:cvs:pserver:${maven.guest.username}@cvs.dev.java.net:/cvs:genesis</connection>
      <developerConnection>
         scm:cvs:pserver:${maven.username}@cvs.dev.java.net:/cvs:genesis</developerConnection>
      <url>https://genesis.dev.java.net/source/browse/genesis/genesis/modules/server/</url>
    </repository>
    <dependencies>
	    <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>genesis-shared</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>https://genesis.dev.java.net/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>hibernate</groupId>
            <artifactId>hibernate</artifactId>
            <version>2.1.6</version>
            <type>jar</type>
            <url>http://www.hibernate.org/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>j2ee</groupId>
            <artifactId>j2ee</artifactId>
            <jar>j2ee.jar</jar>
            <type>jar</type>
            <properties/>
        </dependency>
   	    <dependency>
        	<groupId>commons-collections</groupId>
	        <artifactId>commons-collections</artifactId>
	        <version>2.0</version>
           <url>http://jakarta.apache.org/commons/</url> 
	    </dependency>
        <dependency>
        	<groupId>xdoclet</groupId>
	        <artifactId>xdoclet</artifactId>
	        <jar>xdoclet-1.2.jar</jar>
           <url>http://xdoclet.sourceforge.net/</url>
	    </dependency>
        <dependency>
        	<groupId>xdoclet</groupId>
	        <artifactId>xdoclet-ejb-module</artifactId>
	        <jar>xdoclet-ejb-module-1.2.jar</jar>
           <url>http://xdoclet.sourceforge.net/</url>
	    </dependency>
	    <dependency>
        	<groupId>xjavadoc</groupId>
	        <artifactId>xjavadoc</artifactId>
	        <jar>xjavadoc-1.0.2.jar</jar>
           <url>http://xdoclet.sourceforge.net/</url>
	    </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <unitTest/>
        <resources>
			<resource>
    	    	<directory>${maven.build.src}</directory>
        		<includes>
		          <include>**/*.xml</include>
        		</includes>
			</resource>
    	</resources>
    </build>
    <reports>
        <report>maven-pmd-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-jdepend-plugin</report>
        <report>maven-changelog-plugin</report>
        <report>maven-statcvs-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-junit-report-plugin</report>
    </reports>
    <properties/>
</project>