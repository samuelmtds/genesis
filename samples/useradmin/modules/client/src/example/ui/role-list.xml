<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE panel PUBLIC '-//Thinlets 1.0//EN' 'https://thinlet.dev.java.net/thinlet.dtd'>
<panel weightx="1" columns="1" gap="5" top="5" left="5" bottom="5" right="5">
   <panel weightx="1" weighty="1" columns="1" gap="5" top="5" left="5" bottom="5" right="5">
      <panel weightx="1" weighty="1" scrollable="true">
         <table name="roles" weightx="1" weighty="1" >
            <header>
               <column name="code" text="i18n.Role.code" alignment="left" font="bold" width="100"/>
               <column name="label" text="i18n.Role.label" alignment="left" font="bold" width="200"/>
            </header>
            <row>
               <cell text="1234567890"/>
               <cell text="123456789012345678901234567890"/>
            </row>
         </table>
      </panel>
      <panel halign="right" gap="5" columns="2">
         <button name="ok" text="i18n.button.ok" font="bold" mnemonic="0" type="default" action="ok()"/>
         <button name="cancel" text="i18n.button.cancel" font="bold" mnemonic="0" type="cancel" action="close()"/>
      </panel>
   </panel>
</panel>