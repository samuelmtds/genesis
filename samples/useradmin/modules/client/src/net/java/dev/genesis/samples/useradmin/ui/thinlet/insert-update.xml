<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE panel PUBLIC '-//Thinlets 1.0//EN' 'https://thinlet.dev.java.net/thinlet.dtd'>
<panel gap="5" top="10" left="10" bottom="10" right="10" weightx="1" columns="1" halign="center" border="true">
   <panel gap="5" columns="2" border="true" weightx="1" weighty="1" top="5" left="5" bottom="5" right="5">
      <label text="i18n.User.name" font="bold" mnemonic="1" for="name"/>
      <textfield name="name" height="15" halign="left" valign="bottom" text="123456789012345678901234567890" columns="30"/>
      <label text="i18n.User.role" font="bold" mnemonic="0" for="roleCode"/>
      <panel gap="5" columns="3">
         <textfield name="roleCode" height="15" halign="left" valign="bottom" text="123456789012345" columns="7"/>
         <button text="..." i18n="false" action="chooseRole()" />
         <label name="roleLabel" text="123456789012345" i18n="false"/>
      </panel>
      <label text="i18n.User.login" font="bold" mnemonic="0" for="login"/>
      <textfield name="login" height="15" halign="left" valign="bottom" text="12345678901234567890" columns="15"/>
      <label text="i18n.User.password" font="bold" mnemonic="0" for="password"/>
      <passwordfield name="password" height="15" halign="left" valign="bottom" text="12345678901234567890" columns="15"/>
      <label text="i18n.User.email" font="bold" mnemonic="0" for="email"/>
      <textfield name="email" height="15" halign="left" valign="bottom" text="123456789012345" columns="30"/>
      <label text="i18n.User.birthday" font="bold" mnemonic="0" for="birthday"/>
      <textfield name="birthday" height="15" halign="left" valign="bottom" text="1234567890" columns="15"/>
      <label text="i18n.User.address" font="bold" mnemonic="1" for="address"/>
      <textfield name="address" height="15" halign="left" valign="bottom" text="123456789012345678901234567890" columns="30"/>
      <label text="i18n.User.country" font="bold" mnemonic="0" for="country"/>
      <combobox name="country" property="key=name;value=name;blank=false" editable="false" />
      <label text="i18n.User.state" font="bold" mnemonic="1" for="state"/>
      <combobox name="state" property="key=name;value=name;blank=false" editable="false" />
   </panel>
   <panel gap="5" columns="2" halign="center">
      <button text="i18n.button.cancel" font="bold" mnemonic="2" type="cancel" action="cancel()"/>
      <button name="save" text="i18n.button.save" font="bold" mnemonic="0" type="default"/>
   </panel>
</panel>
